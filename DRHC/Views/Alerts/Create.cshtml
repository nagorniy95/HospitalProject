@model DRHC.Models.Alerts

@{
    ViewData["Title"] = "Create";
}

@*
    Author: Artem Nahornyi
    Emergency Alert message
*@


<h2>Create Emergency Alert Message</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlertTitle" class="control-label"></label>
                <input asp-for="AlertTitle" class="form-control" />
                <span asp-validation-for="AlertTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlertMessage" class="control-label"></label>
                <input asp-for="AlertMessage" class="form-control" />
                <span asp-validation-for="AlertMessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

