
@{
    ViewData["Title"] = "New";
}
<div id="r_box">

    <div class="container">
        <h2 calss="text-center"><span style="color:#03a9f5"> Send Ecards</span></h2>

        <form method="post" action="/Ecard/Create">
            <div class="inprow">
                <label class="inplabel">Patient Name</label>
                <input type="text" id="PatientName_New" name="PatientName_New" />
            </div>

            <div class="inprow">
                <label class="inplabel">Department</label>
                <input type="text" id="Department_New" name="Department_New" />
            </div>

            <div class="inprow">
                <label class="inplabel">Room#</label>
                <input type="text" id="RoomNo_New" name="RoomNo_New" />
            </div>

            <div class="inprow">
                <label class="inplabel">Sender Name</label>
                <input type="text" id="SenderName_new" name="SenderName_new" />
            </div>

            <div class="inprow">
                <label class="inplabel">Sender Email</label>
                <input type="text" id="SenderEmail_New" name="SenderEmail_New" />
            </div>

            <div class="inprow">
                <label class="inplabel">Message</label>
                <input type="text" id="Message_New" name="Message_New" />
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>

    </div>
    </div>


