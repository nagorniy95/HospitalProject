@model DRHC.Models.Event

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form method="POST" action="@Model.EventID">
    <div class="inputname">
        <label class="input-label">Image:</label>
        <input id="img" name="img" value="@Model.EventImage" />
    </div>
    <div class="inputname">
        <label class="input-label">Title:</label>
        <input id="title" name="title" value="@Model.EventTitle" />
    </div>
    <div class="inputname">
        <label class="input-label">Description:</label>
        <input id="desc" name="desc" value="@Model.EventDescription" />
    </div>
    <div class="inputname">
        <label class="input-label">Date:</label>
        <input id="date" name="date" value="@Model.EventDate" />
    </div>
    <input type="submit" value="submit" />
</form>

