@model DRHC.Models.Feedback

@{
    ViewData["Title"] = "Create";
}
@*
    Author: Artem Nahornyi
    Feedback form
    Admin side
*@

<div id="feedback_wrapper">
    <h2 align="center">Feedback Form</h2>

    <div class="row">
        <div class="col-md-12">
            <form method="POST" action="/Feedback/Create">
                <br />
                <div>
                    <label for="New_AuthorFName" class="control-label">First name:</label>
                    <input type="text" id="New_AuthorFName" name="AuthorFName" class="form-control" required />
                </div>

                <div>
                    <label for="New_AuthorLName" class="control-label">Last name:</label>
                    <input type="text" id="New_AuthorLName" name="AuthorLName" class="form-control" required />
                </div>

                <div>
                    <label for="New_AuthorEmail" class="control-label">Email:</label>
                    <input type="text" id="New_AuthorEmail" name="AuthorEmail" class="form-control" required />
                    <asp:RegularExpressionValidator ID="regexEmailValid" runat="server" ValidationExpression="\w+([-+.]\w+)*&#64;\w+([-.]\w+)*\.\w+([-.]\w+)*" ControlToValidate="AuthorEmail" ErrorMessage="Invalid Email Format"></asp:RegularExpressionValidator>
                </div>

                <div>
                    <label for="New_AuthorPhone" class="control-label">Phone:</label>
                    <input type="text" id="New_AuthorPhone" name="AuthorPhone" class="form-control" />
                </div>

                <div>
                    <label for="New_AuthorMessage" class="control-label">Message:</label>
                    <textarea id="New_AuthorMessage" name="AuthorMessage" class="form-control" rows="10" required></textarea>
                </div>
                <br />
                <div>
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
                <br />
            </form>
        </div>
    </div>

    @* Redirect to List page *@
    <span class="btn btn-default">
        @Html.ActionLink("Go back to list", "List", "Feedback")
    </span>
</div>


