@model DRHC.Models.ViewModels.TipAndLetterEdit

@{
    ViewData["Title"] = "Edit";
}


<div id="r_box">


        <h2 class="text-center">Edit</h2>
        @Html.ValidationSummary(true)

        <form method="POST" action="/TipAndLetter/Edit/@Model.TipAndLetter.TipAndLetterID">
            <div class="row">


                <div class="form-group col-lg-12 ">
                    <label class="control-label col-sm-2" for="name">
                        Title
                    </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.TipAndLetter.Title" id="Title" name="Title" />
                        @Html.EditorFor(model => model.TipAndLetter.Title)
                        @Html.ValidationMessageFor(model => model.TipAndLetter.Title)
                    </div>
                </div>
                <div class="form-group col-lg-12 ">
                    <label class="control-label col-sm-3" for="message">
                        Message
                    </label>
                    <div class="col-sm-8">
                        <textarea id="Message" class="form-control" rows="10" cols="20" name="Message">@Model.TipAndLetter.Message</textarea>
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <label class="control-label col-sm-2" for="select">
                        Status
                    </label>
                    <div class="col-sm-8">
                        <select id="TipStatusID" class="form-control" name="TipStatusID">

                            @foreach (var status in Model.TipStatuss)
                            {
                                @if (status.TipStatusID == Model.TipAndLetter.TipStatus.TipStatusID)
                                {
                                    <option value="@status.TipStatusID" selected="selected">@status.TipStatusName</option>
                                }
                                else
                                {
                                    <option value="@status.TipStatusID">@status.TipStatusName</option>}

                            }

                        </select>
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <label class="control-label col-sm-2" for="select1">
                        Type
                    </label>
                    <div class="col-sm-8">
                        <select id="TagID" class="form-control" name="TagID">
                            @foreach (var tag in Model.Tags)
                            {
                                @if (tag.TagID == Model.TipAndLetter.Tag.TagID)
                                {
                                    <option value="@tag.TagID" selected="selected">@tag.TagName</option>
                                }
                                else
                                {
                                    <option value="@tag.TagID">@tag.TagName</option>
                                }
                            }

                        </select>
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="col-sm-10 col-sm-offset-2">
                        <button class="btn btn-success " name="submit" type="submit">
                            Submit
                        </button>
                        <span class="btn btn-info">  @Html.ActionLink("Back To List", "List", "TipAndLetter")</span>

                    </div>
                </div>
            </div>

        </form>

</div>