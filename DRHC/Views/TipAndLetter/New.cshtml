@model DRHC.Models.ViewModels.TipAndLetterEdit

@{
    ViewData["Title"] = "New";
}



<h2>New Page</h2>
<form method="POST" action="/TipAndLetter/Create">
    <div class="inprow">
        <label class="inplabel">Title</label>
        <input id="Title" name="Title" />
    </div>
    <div class="inprow">
        <label class="inplabel">Message</label>
        <textarea id="Message" name="Message"></textarea>
    </div>

    <div class="inptrow">
        <label class="inplabel">Type</label>
        <select id="TagID" name="TagID">
            @foreach (var Tag in Model.Tags)
            {
            <option value="@Tag.TagID">@Tag.TagName</option>
            }
        </select>
    </div>
    <div class="inptrow">
        <label class="inplabel">Status</label>
        <select id="TipStatusID" name="TipStatusID">
            @foreach (var status in Model.TipStatuss)
            {
            <option value="@status.TipStatusID">@status.TipStatusName</option>
            }
        </select>
    </div>


    <div class="inprow">
        <input type="submit" value="Submit" />
    </div>
</form>

@Html.ActionLink("Back To List", "List", "TipAndLetter")
